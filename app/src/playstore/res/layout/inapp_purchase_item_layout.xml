<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	tools:cardCornerRadius="2dp"
	tools:contentPadding="8dp"
	tools:layout_margin="8dp"
	tools:parentTag="android.support.v7.widget.CardView">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:paddingEnd="8dp"
		android:orientation="vertical"
		tools:ignore="RtlSymmetry">

		<TextView
			android:id="@+id/title_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/colorAccent"
			android:textSize="16sp"
			android:layout_marginStart="6dp"
			android:fontFamily="sans-serif-medium"
			tools:text="Buy me coffee!"/>

		<TextView
			android:id="@+id/subtitle_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="4dp"
			android:layout_marginStart="6dp"
			android:textSize="14sp"
			tools:text="Buy the devs a cup of coffee."/>

		<TextView
			android:id="@+id/bought_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			tools:visibility="visible"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="8dp"
			android:layout_marginStart="6dp"
			android:textSize="14sp"
			tools:text="@string/donate_already_purchased_text"/>

		<Button
			android:id="@+id/purchase_cta"
			style="@style/Widget.AppCompat.Button.Colored"
			android:layout_marginTop="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="136dp"
			android:textSize="14sp"
			tools:text="For $0.99"/>

	</LinearLayout>

</merge>